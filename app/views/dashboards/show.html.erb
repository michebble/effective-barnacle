<div class="flex justify-between">
  <span>Hello <%= @current_admin.name %></span>
  <%= button_to "logout", destroy_admin_session_path, method: "delete" %>
</div>
<div class="py-6">
  <%= form_for :by_period, url: dashboard_path, method: "get", class: "flex" do |form| %>
    <div class="flex flex-col pr-2">
      <%= form.label :start_on_from %>
      <%= form.date_field :start_on_from, value: @start_on_from %>
    </div>
    <div class="flex flex-col pr-2">
      <%= form.label :start_on_to %>
      <%= form.date_field :start_on_to, value: @start_on_to %>
    </div>
    <%= form.submit "Filter jobs"  %>
  <% end  %>
</div>
<%= render JobsTableComponent.new(jobs: @jobs) %>
